@model IEnumerable<DAL.Models.Product>
@using Microsoft.Reporting.WebForms
@{
    ViewData["Title"] = "View";
}

<h1>Products Table</h1>

<div>
    <iframe@* src="https://localhost/ReportServer/Pages/ReportViewer.aspx?%2fMINERD+-+SSRS%2fReport+-+Products&rs:Command=Render"*@
            width="100%" height="600" id="reportContainer"></iframe>
</div>

<div class="modal-body">
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<div id="modalContainer">
</div>

<button class="btn btn-primary" id="Report">Ver Reporte</button>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ammount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null) {
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ammount)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Update", new { id=item.Id }, new { @class = "btn btn-warning" }) |
                        @Html.ActionLink("Delete", "Delete", new {  id=item.Id  }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

@section Scripts {
    <script>

        $(document).ready(function () {
            $("#Report").click(function () {
                var iframe = $('#reportContainer');
                iframe.attr('src', 'https://localhost/ReportServer?%2fMINERD+-+SSRS%2fReport+-+Products&rs:Command=Render%22%3E&embedded=true')
                
                $.ajax({
                    url: 'GetReport',
                    success: function (data) {
                        $("#modalContainer").html(data);
                    }
                })
            });
        });

    </script>
}
